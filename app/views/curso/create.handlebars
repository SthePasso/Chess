<form>
    <fieldset>
        <legend>Adicionar Curso</legend>

        <div class="form-group">
            <label for="sigla">Sigla</label>
            <input type="text" class="form-control" name="sigla" id="sigla" value="{{curso.sigla}}"
                placeholder="ICC000">
        </div>

        <div class="form-group">
            <label for="curso">Nome do Curso</label>
            <input type="text" class="form-control" id="curso" value="{{curso.nome}}" placeholder="Digite o nome do Curso">
        </div>

        <div class="form-group">
            <label for="desc">Descrição</label>
            <textarea class="form-control" id="desc" value="{{curso.descricao}}" rows="3"></textarea>
        </div>

        <fieldset class="form-group">
            <legend>Area de Estudo na UFAM</legend>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="optionsRadios" id="1"
                        value="1" checked="">
                    Ciências Exatas
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="optionsRadios" id="2"
                        value="{{curso.area_id}}">
                    Ciências Humanas
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="optionsRadios" id="3"
                        value="{{curso.area_id}}">
                    Ciências Biológicas
                </label>
            </div>
        </fieldset>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn btn-primary">Criar Curso</button>
    </fieldset>
</form>