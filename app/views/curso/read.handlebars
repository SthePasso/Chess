<legend class="text-center">
    {{curso.nome}}</legend>
<div class="col">
    <div class="float-right mt-3">
        <a role="button" href="/curso" class="btn btn-secondary"><i class="fas fa-arrow-left"></i>&nbsp;&nbsp;Voltar</a>
        <a role="button" href="/curso/update/{{id}}" class="btn btn-secondary"><i class="fa fa-pencil-alt"></i>&nbsp;&nbsp;Editar</a>
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover">
            <tbody>
                <tr class="table-dark">
                    <th scope="row">Sigla</th><td>{{curso.sigla}}</td>
                </tr>
                <tr class="table-dark">
                    <th scope="row">Nome do Curso</th><td>{{curso.nome}}</td>
                </tr>
                <tr class="table-dark">
                    <th scope="row">Descrição</th><td>{{curso.descricao}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

