<form>
    <fieldset>
        <legend>Criar Conta</legend>

        <div class="form-group">
            <label for="nome">Nome Completo</label>
            <input type="text" class="form-control" name="nome" id="nome" value="{{user.nome}}" placeholder="Coloque seu Nome Completo">
        </div>

        <div class="form-group">
            <label for="email">Endereço de Email</label>
            <input type="email" class="form-control" name="email" id="email" value="{{user.email}}" aria-describedby="emailHelp"
                placeholder="name@example.com">
        </div>
      
        <div class="form-group">
            <label for="senha">Senha de Acesso</label>
            <input type="password" class="form-control" id="senha" placeholder="••••••••"><small
                id="fileHelp" class="form-text text-muted">A senha precisa ter 6 caracteres ou mais</small>
        </div>

        <div class="form-group">
            <label for="conf">Confirmar Senha de Acesso</label>
            <input type="password" class="form-control" id="conf" value="{{user.nome}}" aria-describedby="emailHelp"
                placeholder="••••••••">
        </div>

        <div class="form-group">
            <label for="area">Area de Estudo na UFAM</label>
            <select class="form-control" id="area">
                <option>Ciências Exatas</option>
                <option>Ciências Humanas</option>
                <option>Ciências Biológicas</option>
            </select>
        </div>

        <div class="form-group">
            <label for="curso">Curso na UFAM</label>
            <input type="text" class="form-control" id="curso" value="{{user.curso}}" placeholder="Curso">
        </div>
        
    </fieldset>
</form>